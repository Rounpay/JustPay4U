    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:gravity="center">

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Commitment"
            android:textColor="@android:color/white" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text=":"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.73">

            <EditText
                android:id="@+id/commit"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/applyBtn"
                android:layout_alignBottom="@+id/applyBtn"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/applyBtn"
                android:background="@drawable/edittext_bg"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="Enter Commitment"
                android:inputType="number"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/color_grey" />

            <LinearLayout
                android:id="@+id/applyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/rounded_reports_button_gradient_border"
                android:elevation="@dimen/_2sdp"
                android:gravity="center"
                android:minWidth="@dimen/_70sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView

                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_tap"
                    app:tint="@color/colorPrimary" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Apply"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>



