<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardBackgroundColor="@color/dashboard_bg_light_color"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/_6sdp">

    <FrameLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_card_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/opImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:includeFontPadding="false"
                android:text="Debit Card Above 2000"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/comm"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/viewDetails"
                android:fontFamily="sans-serif-condensed-medium"
                android:includeFontPadding="false"
                android:text="Charges : 5 %"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/viewCharge"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comm"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/viewDetails"
                android:fontFamily="sans-serif-condensed-medium"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/_5sdp"
                android:text="@string/view_charges"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="italic" />
            <!-- <TextView
                 android:id="@+id/btn"
                 style="@style/TextAppearance.AppCompat.Body2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/title"
                 android:visibility="gone"
                 android:layout_marginTop="@dimen/_2sdp"
                 android:layout_alignParentRight="true"
                 android:fontFamily="sans-serif-medium"
                 android:text="Make Payment"
                 android:textColor="@color/blue" />-->
            <TextView
                android:id="@+id/minMax"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCharge"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/viewDetails"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Min"
                android:textColor="@color/color_grey_light"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/opImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:src="@drawable/app_logo" />

        <TextView

            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:fontFamily="sans-serif-condensed-medium"
            android:includeFontPadding="false"
            android:padding="@dimen/_10sdp"
            android:text="Select"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic" />
    </FrameLayout>
</androidx.cardview.widget.CardView>

