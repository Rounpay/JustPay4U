<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="BubbleLayout">
        <attr name="lookAt">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="lookPosition" format="dimension" />
        <attr name="lookWidth" format="dimension" />
        <attr name="lookLength" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="bubbleRadius" format="dimension" />
        <attr name="bubblePadding" format="dimension" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowX" format="dimension" />
        <attr name="shadowY" format="dimension" />
        <attr name="shadowColor" format="color" />

    </declare-styleable>

    <declare-styleable name="LoopingViewPager">
        <attr name="isInfinite" format="boolean" />
        <attr name="autoScroll" format="boolean" />
        <attr name="wrap_content" format="boolean" />
        <attr name="scrollInterval" format="integer" />
        <attr name="viewpagerAspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="BarcodeScannerView">
        <attr name="shouldScaleToFill" format="boolean" />
        <attr name="laserEnabled" format="boolean" />
        <attr name="laserColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="maskColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderLength" format="dimension" />
        <attr name="roundedCorner" format="boolean" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="squaredFinder" format="boolean" />
        <attr name="borderAlpha" format="float" />
        <attr name="finderOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TimelineView">
        <attr name="marker" format="color|reference" />
        <attr name="markerSize" format="dimension" />
        <attr name="markerInCenter" format="boolean" />
        <attr name="startLineColor" format="color" />
        <attr name="endLineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="dash" value="1" />
        </attr>
        <attr name="lineStyleDashGap" format="dimension" />
        <attr name="lineStyleDashLength" format="dimension" />
        <attr name="lineOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="linePadding" format="dimension" />
    </declare-styleable>
</resources>